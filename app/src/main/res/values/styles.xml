<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.PrimaryButton" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/round_button_primary</item>
    </style>

    <style name="AppTheme.TertiaryButton" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/colorTertiary</item>
        <item name="android:textColor">@color/colorTertiary</item>
        <item name="android:background">@drawable/round_button_tertiary</item>
    </style>

    <style name="AppTheme.SecondaryButton" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/colorSecondary</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/round_button_secondary</item>
    </style>

</resources>
